// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Organisation {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  name    String   @unique
  owner   String //references User
  courses String[] @default([]) //references Course
  members String[] @default([]) //references User
  roles   String[] @default([])
  content String[] @default([]) //references Unit
}

model Role {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  permissions String[]
}

model User {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  oauth_id       String   @unique
  oauth_provider String
  email          String   @unique
  name           String
  image          String
  roles          String[] @default([]) //references Role
}

model Course {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  organisation String //references organisation
  title        String
  description  String
  instructors  String[] @default([]) //references User
  students     String[] @default([]) //references User
  syllabus     String[] @default([]) //references Unit
}

model CourseSection {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  title   String
  content String[] @default([]) //references CourseUnit
}

model CourseUnit {
  id            String @id @default(auto()) @map("_id") @db.ObjectId
  owner         String //references Organisation
  title         String
  type          String
  markdown_body String
}

model HelpRequest {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  course       String //references course
  students     String[] //references User
  status       String   @default("WAITING") // WAITING | ASSIGNED | FINISHED
  instructor   String? //references User
  content      String
  created_at   DateTime @default(now())
  finished_at DateTime?
}

//Below is not part of MVP

model StudentNotes {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  student String //references User
  notes   String
}

model StudentFeedback {
  id         String @id @default(auto()) @map("_id") @db.ObjectId
  student    String //references User
  assignment String //references CourseContent
  instructor String //references User
  content    String
}
